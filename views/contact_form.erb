<% if @sent %>
  <p class="alert-message success">Thank you for contacting us! We'll be in touch shortly.</p>
  <p>
    If you'd like, you can also
    <a href="http://twitter.com/flatterline">follow Flatterline on Twitter</a>.
  </p>
<% else %>

  <% unless @errors.nil? or @errors.empty? %>
    <div class="alert-message error">
      Please correct the error<%= @errors.count == 1 ? '' : 's' %> in the form below and resubmit.
    </div>
  <% end %>

  <form action="/contact-form" method="POST">
    <fieldset>
      <% [:name, :email, :company, :phone].each do |a| %>
        <%
          type = 'text'
          type = 'email' if a == :email
          type = 'tel' if a == :phone
        %>
        <div class="field clearfix <%= ' error' unless @errors[a].nil? %>">
          <label for="<%= a %>"><%= a.capitalize %></label>
          <div class="input">
            <input type="<%= type %>" name="<%= a %>" id="<%= a %>" value="<%= @params[a] %>" class="xlarge <%= @errors[a].nil? ? '' : ' error' %>" />
            <% unless @errors[a].nil? %>
              <span class="help-inline"><%= @errors[a] %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="field clearfix <%= ' error' unless @errors[:message].nil? %>">
        <label for="message">Briefly describe your project</label>
        <div class="input">

          <textarea name="message" id="message" rows="6" class="xxlarge"><%= @params[:message] %></textarea>
          <% unless @errors[:message].nil? %>
            <span class="help-inline"><%= @errors[:message] %></span>
          <% end %>
        </div>
      </div>

      <div class="actions shh">
        <input type="submit" name="" value="Send" class="btn primary" />
      </div>
    </fieldset>
  </form>
<% end %>
